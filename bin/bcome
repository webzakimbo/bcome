#!/usr/bin/env ruby
# frozen_string_literal: true

require 'bcome'

breadcrumbs = ARGV[0]
arguments = ARGV - [ARGV[0]]
handler = ::Bcome::Startup.new(breadcrumbs, arguments)

trap('SIGINT') do
  handler.stop_loading_bars
end

trap('INT') do
  handler.stop_loading_bars
end

Thread.report_on_exception = true

handler.do
